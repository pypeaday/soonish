# Environment
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here  # Change this in production!

# Database
DATABASE_URL=sqlite+aiosqlite:///./soonish.db

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]  # Comma-separated list of allowed origins
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE"]  # Comma-separated list of allowed methods
CORS_ALLOW_HEADERS=["*"]  # Comma-separated list of allowed headers

# Rate Limiting
RATE_LIMIT_REQUESTS=100  # Number of requests per window
RATE_LIMIT_WINDOW=3600  # Window size in seconds (1 hour)

# Request Size Limits
MAX_REQUEST_SIZE=5242880  # 5MB in bytes

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Notification Settings (to be configured later)
NOTIFICATION_PROVIDER=http
NOTIFICATION_BASE_URL=
NOTIFICATION_API_KEY=
