# Soonish example environment configuration
# Copy to .env and adjust values for your environment

# Database
# For current sync SQLAlchemy engine use sqlite:/// (compatible with src/database.py)
DATABASE_URL=sqlite:///./soonish.db
# If you switch to async SQLAlchemy later, use:
# DATABASE_URL=sqlite+aiosqlite:///./soonish.db
# Or PostgreSQL (async):
# DATABASE_URL=postgresql+asyncpg://USER:PASS@HOST:5432/DBNAME

# Temporal
TEMPORAL_URL=ghost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=soonish-task-queue

# Security
SECRET_KEY=dev-secret-key-change-me

# Development
DEBUG=true
TEST_EMAIL=test@example.com
LOG_LEVEL=INFO

# Optional encryption key (future use)
ENCRYPTION_KEY=

# Optional notification integrations
# Used by scripts/init_db.py for sample Gotify integration (dev only)
GOTIFY_API_TOKEN=
NTFY_TOPIC=

# Optional SMTP settings (for mailto:// via Apprise)
SMTP_SERVER=
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=

# Rate limiting (notification activity)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
